{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Assertion schema",
  "description": "Blockcerts 2.0 Assertion schema. Extends Open Badges v2.0 schema: https://w3id.org/openbadges#Assertion",
  "type": "object",
  "definitions": {
    "JsonLdContext": {
      "description": "A link to a valid JSON-LD context, or array of JSON-LD contexts",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object"
              },
              {
                "type": "array"
              }
            ]
          }
        }
      ]
    },
    "JsonLdType": {
      "description": "A type or an array of types defined in a referenced JSON-LD context.",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "MerkleProof2019": {
      "$ref": "https://raw.githubusercontent.com/AnthonyRonning/https-github.com-labnol-files/master/merkleProof2019Schema.json"
    }
  },
  "properties": {
    "id": {
      "description": "Defined by `id` property in https://www.w3.org/TR/vc-data-model/#identifiers.",
      "type": "string",
      "anyOf": [
        {
          "type": "string",
          "pattern": "^urn:uuid:"
        },
        {
          "type": "string",
          "format": "uri"
        }
      ]
    },
    "type": {
      "$ref": "#/definitions/JsonLdType",
      "description": "Defined by `type` property of https://www.w3.org/TR/vc-data-model/#types"
    },
    "issuer": {
      "@id": "cred:issuer",
      "@type": "@id"
    },
    "issuanceDate": {
      "@id": "cred:issuanceDate",
      "@type": "xsd:dateTime"
    },
    "credentialSubject": {
      "@id": "cred:credentialSubject",
      "@type": "@id"
    },
    "proof": {
      "@id": "sec:proof",
      "@type": "@id",
      "@container": "@graph"
    }
  },
  "required": [
    "id",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject",
    "proof"
  ],
  "additionalProperties": true
}
